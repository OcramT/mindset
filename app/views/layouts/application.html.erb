<!DOCTYPE html>
<html>
  <head>
    <title>Mindset</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <link rel='icon' href="<%= image_url('mindset-logo.svg') %>"/>
    <script type='text/javascript'>
      window.close = "<%=image_url('close-icon.png')%>";
      window.medPlay = "<%=image_url('med-play.png')%>";
      window.medButton = "<%=image_url('meditation-play-button.png')%>";
      window.logo = "<%=image_url('mindset-logo.svg')%>";
      window.logoText = "<%=image_url('mindsetLogo2.png')%>";
      window.mindsetBGUrl = "<%=image_url('headspace-login-bg.svg')%>";
      window.meditationBG = "<%=image_url('meditation-bg.png')%>";
    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
